<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    android:layout_height="100dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/ic_android"
            android:layout_margin="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_gank"
            />
        <ImageView
            android:id="@+id/img_ren"
            android:layout_below="@id/img_gank"
            android:layout_marginLeft="15dp"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_author"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/img_gank"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="1"
            android:id="@+id/tv_desc"
            />
        <TextView
            android:id="@+id/tv_author"
            android:layout_margin="15dp"
            android:layout_below="@id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_toRightOf="@id/img_ren"
            />
        <TextView
            android:id="@+id/tv_time"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            />
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_desc"
            android:src="@mipmap/ic_time"
            android:layout_toLeftOf="@id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
